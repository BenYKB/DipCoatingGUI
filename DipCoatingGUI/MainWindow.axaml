<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DipCoatingGUI.MainWindow"
        Title="DipCoatingGUI">
	<StackPanel Orientation="Horizontal">
		<StackPanel Orientation="Vertical">
			<StackPanel Margin="10">
				<Button Name="UpButton" Click="onUpButtonClick" Margin="5,0">Move Arm Up</Button>
				<Button Name="DownButton" Click="onDownButtonClick" Margin="5,0">Move Arm Down</Button>
			</StackPanel>
			<StackPanel>
				<Button Name="ConnectPhidget" Click="onConnectClick">Disconnected</Button>
			</StackPanel>
		</StackPanel>
		<StackPanel Orientation="Vertical">
			<NumericUpDown Name="NumCycles" Value="{Binding NumCycles}" Width="100" Maximum="50" Minimum="1"></NumericUpDown>
			<NumericUpDown Name="SecondsDown" Value="5" Width="100" Maximum="50" Minimum="1"></NumericUpDown>
			<NumericUpDown Name="MinutesUp" Value="5" Width="100" Maximum="50" Minimum="1"></NumericUpDown>
		</StackPanel>
	</StackPanel>
</Window>
